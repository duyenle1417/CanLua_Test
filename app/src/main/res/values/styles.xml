<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/app_toolbar_Color</item>
        <item name="android:textColor">@color/app_toolbar_textColor</item>
        <item name="actionMenuTextColor">@color/app_toolbar_textColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ToolBarInput" parent="Theme.AppCompat">
        <item name="android:background">@color/app_toolbar_Color</item>
        <item name="android:textColor">@color/app_toolbar_textColor</item>
        <item name="actionMenuTextColor">@color/app_toolbar_textColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat">
        <item name="android:background">#E6F29222</item>
        <item name="android:textColor">@color/app_toolbar_textColor</item>
        <item name="actionMenuTextColor">@color/app_toolbar_textColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textColor">@color/textColor_grey</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/textView_border_orange</item>
        <item name="colorAccent">@color/textView_border_orange</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>